---
import { IMAGE_URL } from '../consts';

interface Props {
  title: string;
  image: string;
  href: string;
  category: string;
  reading: number;
}
const {image, title, href, category, reading} = Astro.props;
---
<div class="col-12" title={title}>
    <div class="row g-4 align-items-center">
        <div class="col-6">
            <div class="overflow-hidden rounded">
                <img src={`${IMAGE_URL}${image}`} class="img-zoomin img-fluid rounded" style="width: 100%; height:100px;" alt={title}>
            </div>
        </div>
        <div class="col-6">
            <div class="features-content d-flex flex-column">
                <small class="text-uppercase">{category}</small>
                <a href={`blog${href}`} class="h6">{title.slice(0, 35)}...</a>
                <small>
                    <i class="fa fa-clock"></i>
                    <span class="me-2" style="margin-left: 3px;">
                        {reading} { reading > 1 ? ' mins ': ' min ' } read
                    </span> 
                </small>
            </div>
        </div>
    </div>
</div>